<resources>
    <style name="CalendarStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:weekDayTextAppearance">@style/WeekDayTextStyle</item>
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
    </style>

    <!-- Style for calendar dates -->
    <style name="CalendarDateText">
        <item name="android:textColor">#000000</item> <!-- Black Text -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCalendarHeaderText">
        <item name="android:textSize">20sp</item>  <!-- ✅ 글씨 크기 조정 -->
        <item name="android:textColor">#000000</item>  <!-- ✅ 검정색으로 설정 -->
        <item name="android:textStyle">bold</item>  <!-- ✅ 볼드체 적용 -->
    </style>

    <style name="WeekDayTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>