<resources>
    <style name="CalendarStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:weekDayTextAppearance">@style/CalendarWeekText</item>
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
    </style>

    <!-- Style for weekday labels (Sun, Mon, etc.) -->
    <style name="CalendarWeekText">
        <item name="android:textColor">#000000</item> <!-- Black Text -->
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style for calendar dates -->
    <style name="CalendarDateText">
        <item name="android:textColor">#000000</item> <!-- Black Text -->
        <item name="android:textSize">16sp</item>
    </style>
</resources>